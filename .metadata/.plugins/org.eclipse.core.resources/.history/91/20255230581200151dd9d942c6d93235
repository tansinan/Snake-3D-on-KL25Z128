#include "derivative.h"
#include "Buzzer.h"


void Buzzer_init()
{
	SIM_SOPT2 |= SIM_SOPT2_TPMSRC(1);
	SIM_SOPT2 &= ~SIM_SOPT2_PLLFLLSEL_MASK;
	SIM_SCGC5 |= SIM_SCGC5_PORTB_MASK;
	SIM_SCGC6 |= SIM_SCGC6_TPM2_MASK;
	
	PORTB_PCR18 = 0x0300;
}

void Buzzer_set(int frequency, int volume)
{
	
}
