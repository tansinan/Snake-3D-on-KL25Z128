#include "AppFramework.h"


#include "AppFramework.h"

App* currentApp = NULL;

void App_create(App* app, void (*drawHandler)(), void (*eventHandler)(int event, int data))
{
	app->paintHandler = drawHandler;
	app->eventHandler = eventHandler;
}

void App_switchTo(App* app)
{
	currentApp = app;
}

App* App_getCurrentApp()
{
	return currentApp;
}

void App_defaultDrawHandler()
{
	
}

void App_defaultKeyHandler()
{
	
}
