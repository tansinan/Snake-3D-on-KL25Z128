#include "Button.h"
#include "Timer.h"
#include "Types.h"

uint8 keyStatus[8];

void Button_init()
{
	// Port B和Port E使能
	SIM_SCGC5 |= 0x2400;
	
	//配置相关引脚为GPIO并启用上拉电阻
	PORTB_PCR17 = 0x102;
	PORTB_PCR16 = 0x102;
	PORTB_PCR9 = 0x102;
	PORTB_PCR8 = 0x102;
	PORTE_PCR2 = 0x102;
	PORTE_PCR3 = 0x102;
	PORTE_PCR4 = 0x102;
	PORTE_PCR5 = 0x102;
	
	GPIOB_PDDR &= ~(1<<17);
	GPIOB_PDDR &= ~(1<<16);
	GPIOB_PDDR &= ~(1<<9);
	GPIOB_PDDR &= ~(1<<8);
	GPIOE_PDDR &= ~(1<<2);
	GPIOE_PDDR &= ~(1<<3);
	GPIOE_PDDR &= ~(1<<4);
	GPIOE_PDDR &= ~(1<<5);
	
	Timer_set(10, Button_onTimer);
	
	for(int i=0;i<8;i++)
	{
		keyStatus[i] = 0;
	}
}

void Button_onTimer()
{
	for(;;)
	{
		//int var = GPIOB_PDIR;
		if((GPIOB_PDIR&(1<<17))==0&& lastChar!= 'a')
		{
			keyStatus[KEY_UP] = 1;
		}
		else
		{
			keyStatus[KEY_UP] = 0;
		}
		
		if((GPIOB_PDIR&(1<<16))==0&& lastChar!= 'b')
		{
			keyStatus[KEY_LEFT] = 1;
		}
		else
		{
			keyStatus[KEY_LEFT] = 0;
		}
		
		if((GPIOB_PDIR&(1<<9))==0&& lastChar!= 'c')
		{
			keyStatus[KEY_DOWN] = 1;
		}
		else
		{
			keyStatus[KEY_DOWN] = 0;
		}
		if((GPIOB_PDIR&(1<<8))==0&& lastChar!= 'd')
		{
			lastChar = 'd';
			UART_putChar('d');
		}
		if((GPIOE_PDIR&(1<<2))==0 && lastChar!= 'e')
		{
			lastChar = 'e';
			UART_putChar('e');
		}
		if((GPIOE_PDIR&(1<<3))==0 && lastChar!= 'f')
		{
			lastChar = 'f';
			UART_putChar('f');
		}
		if((GPIOE_PDIR&(1<<4))==0 && lastChar!= 'g')
		{
			lastChar = 'g';
			UART_putChar('g');
		}
		if((GPIOE_PDIR&(1<<5))==0 && lastChar!= 'h')
		{
			lastChar = 'h';
			UART_putChar('h');
		}
	}
}
